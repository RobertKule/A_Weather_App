{
  "name": "rk-weather",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Application météo moderne avec React et TailwindCSS",
  "keywords": ["weather", "react", "tailwind", "meteo"],
  "author": "Robert Kule",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobertKule/rk-weather"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run sitemap && vite build",
    "preview": "vite preview",
    "lint": "eslint src --report-unused-disable-directives --max-warnings 0", 
    "lint:fix": "eslint src --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,json,css}\"",
    "prepare": "husky install",
    "netlify:deploy": "netlify deploy --prod",
  "netlify:deploy:preview": "netlify deploy",
  "netlify:build": "npm run build && npm run postbuild",
  "postbuild": "cp _redirects dist/_redirects 2>/dev/null || :",
   "sitemap": "node scripts/generate-sitemap.js",
   "lighthouse": "lighthouse http://localhost:3000 --view --output=html --output-path=./lighthouse-report.html"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "vite": "^7.2.4"
  }
}